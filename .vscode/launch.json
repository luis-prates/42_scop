				"args": [
					"build",
					"--bin=scop_42",
					"--package=scop_42"
				],
				"filter": {
					"name": "scop_42",
					"kind": "bin"
				}
			},
			"args": [ "resources/models/42.obj", "resources/textures/brickwall.bmp" ],
			"cwd": "${workspaceFolder}"
		},
